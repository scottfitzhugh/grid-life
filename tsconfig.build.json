{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"allowImportingTsExtensions": false
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"src/**/*.test.ts",
		"src/**/*.spec.ts"
	]
} 